        <sql>
            CREATE TABLE IF NOT EXISTS public.roles
            (
                role_id bigserial NOT NULL ,
                name varchar(255) NOT NULL,
                CONSTRAINT roles_pkey PRIMARY KEY (role_id)
            );

        </sql>
    </changeSet>
</databaseChangeLog>